// регистрируем задачу для конвертации файла scss в css

gulp.task("sass", function () {
	return gulp.src('./css/style.scss')
		.pipe(_sass())
		.pipe(gulp.dest('./css'));
		//.pipe(gulp.dest(paths.webroot + '/css'));
	
});